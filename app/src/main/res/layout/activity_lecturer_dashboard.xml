<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lecturer_dashboard_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lecturer_dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecturer Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"/>

        <Button
            android:id="@+id/btn_view_available_laptops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Available Laptops"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_check_out_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Out Laptop"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_report_issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Issue"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
