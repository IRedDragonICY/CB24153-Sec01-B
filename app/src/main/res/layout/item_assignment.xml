<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_assignment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/text_view_assignment_laptop_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: Laptop001"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_assignment_laptop_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model: Dell XPS 13"/>

    <TextView
        android:id="@+id/text_view_assignment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Checked Out"/>

    <TextView
        android:id="@+id/text_view_assignment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2024-01-15"/>

</LinearLayout>
