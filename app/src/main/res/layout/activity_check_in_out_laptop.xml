<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/check_in_out_laptop_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/check_in_out_laptop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check In/Out Laptop"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"/>

        <EditText
            android:id="@+id/edit_text_laptop_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Laptop ID"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/radio_group_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radio_check_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"/>

            <RadioButton
                android:id="@+id/radio_check_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out"
                android:layout_marginStart="16dp"/>

        </RadioGroup>

        <Button
            android:id="@+id/btn_submit_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>
