<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itmanager_dashboard_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itmanager_dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT Manager Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"/>

        <Button
            android:id="@+id/btn_view_all_statuses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Laptop Statuses"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_check_in_out_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check In/Out Laptop"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_update_laptop_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Laptop Information"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_manage_drawer_assignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Drawer Assignments"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_manage_user_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage User Accounts"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_view_analytics_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Analytics and Reports"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
